{{>header}}
{{>nav}}
<section class="container p-3">
    <h1>search on todolist</h1>
    <form class="d-flex mb-2" role="search" method="GET" action="/search">
        <input
          class="form-control me-2"
          type="search"
          id="search"
          placeholder="Search"
          aria-label="Search"
          name="search"
        />
        <button class="btn btn-success" type="submit">Search</button>
      </form>
</section>
<section class="container p-3">
    <h3>ToDo List App</h3>
    <table class="table table-bordered table-dark">
        <thead>
            <tr>
                <td>Id</td>
                <td>Title</td>
                <td>Content</td>
                <td>Status</td>
                <td>Due Date</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            {{#if hasData}}
            {{#each allData}}
            <tr>
                <td>{{_id}}</td>
                <td>{{title}}</td> 
                <td>{{content}}</td>
                <td>{{status}}</td>
                <td>{{date}}</td>
                <td>
                    <a href="/show/{{_id}}" class="mx-3 btn btn-primary">Show</a>
                    <a href="/edit/{{_id}}" class="mx-3 btn btn-warning">Edit</a>
                    <a href="/status/{{_id}}" class="mx-3 btn btn-success">Activate</a>
                    <a href="/delete/{{_id}}" class="mx-3 btn btn-danger">Delete</a>
                </td>
            </tr>
            {{/each}}
            {{else}}
            <tr >
                <td colspan="6" >no founded data</td>
            </tr>
            {{/if}}
        </tbody>
    </table>
</section>

{{>footer}}